{
  "name": "@minglabs-sz/template-vue3-ts",
  "version": "1.0.4",
  "private": false,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "git config core.hooksPath; npx simple-git-hooks",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:markup": "vue-tsc --noEmit",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint --fix **/*.{css,scss,vue}"
  },
  "dependencies": {
    "stylelint": "^14.11.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^28.0.0",
    "vue": "^3.2.25",
    "vue-router": "4",
    "vue-tsc": "^0.40.4"
  },
  "devDependencies": {
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.23.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^2.0.0",
    "lint-staged": "^13.0.3",
    "picocolors": "^1.0.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "vite": "^2.7.2"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec node scripts/verifyCommit.js $1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*": "prettier -w -u"
  },
  "license": "MIT",
  "description": "Vue3 + TypeScript template project by MingLabs with ❤️",
  "author": "zjhiphop@gmail.com"
}
